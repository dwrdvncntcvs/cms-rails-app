<div class="card">
  <div class="card-header">
    <h4>Sign In</h4>
  </div>

 <div class="card-body px-5">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group field mb-2">
        <%= f.label :email, class: "form-label"%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter email address here..." %>
      </div>

      <div class="form-group field mb-2">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter password here..." %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check field mb-2">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>

      <div class="actions my-3">
        <%= f.submit "Sign In", class: "btn btn-dark" %>
      </div>
    <% end %>
 </div>

  <div class="card-footer d-flex gap-2">
    <%= render "devise/shared/links" %>
  </div>

</div>